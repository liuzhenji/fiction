
  .fiction-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    align-content: center;
    box-sizing: border-box;
  }
  
  .fiction-item {
    display: flex;
    flex-direction: row;
    padding: 10rpx 0rpx;
    width: 100%;
  }
  
  .image-container {
    width: 25%;
    height: 230rpx;
  }
  
  .image-desc {
    width: 100%;
    height: 100%;
  }
  .content-container {
    width: 70%;
    display: flex;
    padding: 3rpx 0rpx 3rpx 30rpx;
    flex-direction: column;
    justify-content: flex-start;
  }
  
  .content-title {
    font-size: 18px;
  }
  
  .content-artist {
    color: #8d8d8d;
    font-size: 10px;
  }
  
  .content-last-read {
    color: #8d8d8d;
    font-size: 11px;
    overflow: hidden;
    display: -webkit-box;
    margin-top: 35rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
