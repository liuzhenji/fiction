<view>
<view class="title-container">
<text>共{{total}}章</text>
<picker range="{{range}}" bindchange="bindPickerChange" value="{{rangeIndex}}">
<view>
<text>当前选择：</text>{{range[rangeIndex]}}
</view>
</picker>
</view>
<view class="separate-line-1"/>
<view class="catalog-container">
<block wx:for="{{chapters}}" wx:for-index="index" wx:for-item="item" wx:key="{{index}}">
<view catchtap="tapChapter" data-wpytapchapter-a="{{item.id}}">
<view class="item-container">
<view class="item-title">{{item.title}}</view>
</view>
<view class="separate-line-1"/>   
</view>
</block>
</view>
</view>